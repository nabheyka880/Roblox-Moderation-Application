<Application x:Class="Roblox_Moderation_Application_WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Roblox_Moderation_Application_WPF"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="LargeTextBlock" TargetType="ui:TextBlock">
                <Setter Property="FontSize" Value="35" />
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>

            <Style x:Key="MarginGrid" TargetType="Grid">
                <Setter Property="Margin" Value="30, 30, 30, 15"/>
            </Style>

            <Style x:Key="DescriptionPageTxt" TargetType="ui:TextBlock">
                <Setter Property="FontSize" Value="15" />
                <Setter Property="FontWeight" Value="SemiBold"/>
            </Style>

            <Style TargetType="ui:TextBlock">
                <Setter Property="Foreground" Value="White"/>
            </Style>

            <SolidColorBrush x:Key="ExtraBackground" Color="White" Opacity="0.06"/>

            <Style x:Key="PlayerInformationBorder" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource ExtraBackground}"/>
                <Setter Property="CornerRadius" Value="5"/>
                <Setter Property="Margin" Value="0, 0, 0, 0"/>
                <Setter Property="Width" Value="442"/>
                <Setter Property="Height" Value="50"/>
            </Style>

            <Style x:Key="PlayerInformationTxt" TargetType="ui:TextBlock">
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="20, 0, 0, 0"/>
                <Setter Property="Opacity" Value="0.6"/>
            </Style>

            <SolidColorBrush x:Key="BlueBackground" Color="#2279f2"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
