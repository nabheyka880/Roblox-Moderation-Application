<UserControl x:Class="Roblox_Moderation_Application_WPF.Controls.BetterCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Roblox_Moderation_Application_WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             x:Name="Root">
    
    <ui:CardControl Margin="0, 4, 0, 0">
        <ui:CardControl.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Margin="5, 0, 0, 0">
                    <ui:TextBlock Text="{Binding Header, ElementName=Root}" Grid.Row="0" FontSize="17" FontWeight="SemiBold"/>
                    <ui:TextBlock Text="{Binding Description, ElementName=Root}" Grid.Row="1" FontSize="14" MaxWidth="340" HorizontalAlignment="Left" FontWeight="SemiBold" Foreground="Gray" TextWrapping="Wrap"/>
                </StackPanel>

                <ContentPresenter Content="{Binding CardContent, ElementName=Root}" HorizontalAlignment="Right" VerticalAlignment="Center"/>

            </Grid>
        </ui:CardControl.Header>
    </ui:CardControl>
</UserControl>
